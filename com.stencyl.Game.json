{
    "app-id": "com.stencyl.Game",
    "runtime": "org.gnome.Sdk",
    "runtime-version": "3.22",
    "sdk": "org.gnome.Sdk",
    "command": "stencyl",
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--share=network",
        "--device=all",
        "--filesystem=host"
    ],
    "modules": [
					{
            "name": "stencyl",
            "no-autogen": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "http://mario.stencyl.net/public/Stencyl-64-full.tar.gz",
                    "strip-components": 0,
                    "sha256": "24251240dd9719a01c741b353e35da776097885602ccedb81b00ad81daef3ac6"
                },
                {
                    "type": "file",
                    "path": "stencyl-Makefile",
                    "dest-filename": "Makefile"
                }
            ]
        },
        {
            "name": "resources",
            "no-autogen": true,
            "sources": [
                {
                    "type": "file",
                    "path": "stencyl.sh",
                    "dest-filename": "stencyl.sh"
                },
                {
                    "type": "file",
                    "path": "Makefile",
                    "dest-filename": "Makefile"
                }
            ]
        }
    ]
}
